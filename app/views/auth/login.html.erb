<div class="container-fluid">
  <% if flash[:alert] %>
    <div class="row">
      <div class="col-xs-6 col-xs-offset-3">
        <div class="alert alert-<%= flash[:alert][:type] %>" role="alert">
          <%= flash[:alert][:message] %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <h3>Login</h3>
      <%= form_tag login_path, :method => "post" %>
        <fieldset class="form-group">
            <label>Email Address</label>
            <%= email_field_tag :email, nil, class: "form-control", placeholder: "Email" %>
        </fieldset>

        <fieldset class="form-group">
            <label>Password</label>
            <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password" %>
        </fieldset>

        <%= button_tag "Login", class: "btn btn-primary" %>
      </form>
    </div>
  </div>
</div>
